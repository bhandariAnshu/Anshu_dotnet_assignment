@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h1 class="display-5 fw-bold">Project Management Tool</h1>
                    <p class="lead">Streamline your projects, track deadlines, and collaborate effectively.</p>
                </div>

                <div class="card-body text-center">
                    <p class="mb-4">Manage your projects efficiently with our powerful project management system.</p>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="feature-box text-center p-4">
                                <i class="fas fa-tasks fa-3x text-primary mb-3"></i>
                                <h4>Project Tracking</h4>
                                <p>Monitor the progress of your ongoing projects in real-time.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-box text-center p-4">
                                <i class="fas fa-users fa-3x text-success mb-3"></i>
                                <h4>Team Collaboration</h4>
                                <p>Assign tasks and collaborate with your team members effortlessly.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-box text-center p-4">
                                <i class="fas fa-calendar-check fa-3x text-warning mb-3"></i>
                                <h4>Deadline Management</h4>
                                <p>Set project deadlines and receive timely reminders.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Projects" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-folder-open"></i> View Projects
                        </a>
                        <a asp-controller="Projects" asp-action="Create" class="btn btn-success btn-lg">
                            <i class="fas fa-plus-circle"></i> Create New Project
                        </a>
                    </div>
                </div>

                <div class="card-footer text-center bg-light">
                    <small>Need help? Visit our <a href="https://learn.microsoft.com/aspnet/core" target="_blank">ASP.NET Core Guide</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
